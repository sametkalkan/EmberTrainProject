<form class="form-horizontal">
  <div class="form-group">
    <label for="name" class="col-md-2 control-label">ISBN</label>
    <div class="col-md-5">
      {{input type="text" value=isbn class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-md-2 control-label">Title</label>
    <div class="col-md-5">
      {{input type="text" value=title class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-md-2 control-label">Publisher</label>
    <div class="col-md-5">
      {{input type="text" value=publisher class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-md-2 control-label">Author</label>
    <div class="col-md-5">
      {{input type="text" value=author class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-md-2 control-label">Category</label>
    <div class="col-md-5">
      {{input type="text" value=category class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-md-2 control-label">Publish Date</label>
    <div class="col-md-5">
      {{input type="date" value=publishDate class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-md-2 control-label">Number Of Page</label>
    <div class="col-md-5">
      {{input type="text" value=npage class="form-control"}}
    </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
     <button {{action "add"}} class="btn btn-sm btn-primary">Add</button>
   </div>
 </div>
</form>
