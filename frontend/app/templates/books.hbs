<h1> Books </h1>
<br>
<div class="col-md-5">

  <div class="active-pink-3 active-pink-4 mb-4">
    <i class="fa fa-search" aria-hidden="true"></i>
    <input class="form-control" type="text" placeholder="Search By Name" aria-label="Search">
  </div>

</div>
<div class="panel panel-info">
  <div class="panel-heading">Books
    <div class="table-responsive">
      <table class="table">
        <tr>
          <th>ISBN</th>
          <th>TITLE</th>
          <th>PUBLISHER</th>
          <th>AUTHOR</th>
          <th>CATEGORY</th>
          <th>PUBLISH DATE</th>
          <th>NUMBER OF PAGE</th>
          <th>UPDATE</th>
          <th>DELETE</th>

        </tr>

        {{#each model as |b|}}
          <tr>
            {{#link-to 'viewbook' b.id }}
              <td> {{b.isbn}} </td>
            {{/link-to}}
            <td> {{b.title}}</td>
            <td> {{b.publisher}}</td>
            <td> {{b.author}}</td>
            <td> {{b.category}}</td>
            <td> {{b.publishDate}}</td>
            <td> {{b.npage}}</td>
            <td> <button type="button" class="btn btn-info" {{action "update" b.id}}>Update</button>  </td>
            <td> <button type="button" class="btn btn-danger" {{action "delete" b.id}}>Delete</button>  </td>

          </tr>
        {{/each}}

      </table>
    </div>
  </div>
    <button type="button" class="btn btn-success" {{action "addBook"}}>Add New Book</button>
  </div>
